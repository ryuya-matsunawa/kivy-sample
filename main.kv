#:set padding 20

<MainGrid>:
    rows: 3
    cols: 3
    spacing: 15

<SubGrid>:
    rows: 3
    cols: 3

<Cell>:
    size_hint_x: 1
    size_hint_y: 1
    font_size: 30

BoxLayout:
    padding: 10
    spacing: 10
    BoxLayout:
        size_hint_x: 2
        size_hint_y: 1
        MainGrid:
            id: main_grid
            center: root.center
            size: [min(root.width, root.height) - 2 * padding] * 2
    BoxLayout:
        size_hint_x: 1
        size_hint_y: 1
        orientation: 'vertical'
        SubGrid:
            id: number_grid
            size_hint_y: 1
            center: root.center
            padding: [5, 0, 0, 10]
        BoxLayout:
            size_hint_y: 1
            padding: [5, 0, 0, 0]
            orientation: 'vertical'
            Button:
                id: reset_button
                text: 'Reset'
                size_hint_y: .5
                center: root.center
                on_press: app.reset()
            Button:
                id: solve_button
                text: 'Solve'
                size_hint_y: .5
                center: root.center
                on_press: app.solve()
