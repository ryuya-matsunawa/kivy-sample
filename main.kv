#:set padding 20

<MainGrid>:
    rows: 3
    cols: 3
    spacing: 15

<SubGrid>:
    rows: 3
    cols: 3

<Cell>:
    size_hint_x: 1
    size_hint_y: 1
    font_size: 30

FloatLayout:
    BoxLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: (None, None)
        center: root.center
        orientation: 'vertical'
        size: [min(root.width, root.height) - 2 * padding] * 2
        MainGrid:
            id: main_grid
            size_hint_y: 9
            center: root.center
            size: [min(root.width, root.height) - 2 * padding] * 2
        SubGrid:
            id: number_grid
            size_hint_x: .25
            size_hint_y: 2.5
            center: root.center
            padding: [0, 10, 0, 0]
